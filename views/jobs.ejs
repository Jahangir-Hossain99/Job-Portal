<%- include("./layout/header") %>

<main>

   
        

    <div class="container-xxl py-5">
        <div class="container">
            <% if(message && message.length>0){ %>
                <div class="alert alert-success" role="alert" id="alert">
                    <%= message[0] %>
                </div>
            <% } %>
            <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Job Listing</h1>
            <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
              
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        <div class="job-item p-4 mb-4">
                            
        <% for (let i=0;i< jobs.length;i++) { %>
                            <div class="shadow-sm row g-4 p-3 mb-3">
                                <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                    <img class="flex-shrink-0 img-fluid border rounded" src="https://picsum.photos/200/300" alt="" style="width: 80px; height: 80px;">
                                    <div class="text-start ps-4">
                                        <h5 class="mb-3"><%= jobs[i].title %></h5>
                                        
                                        <span class="text-truncate me-3"><i class="fa-solid fa-city text-primary me-2"></i><%= jobs[i].companyName %></span>
                                        <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i><%= jobs[i].location %></span>
                                        <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i><%= jobs[i].description %></span>
                                        <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i><%= jobs[i].salary %></span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                    <div class="d-flex mb-3">
                                        <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                        <form method="post" action="/jobs/applications/<%= jobs[i]._id %>" >
                                            <button class="btn btn-primary">Apply Now</button>
                                        </form>
                                        
                                        <a class="btn btn-primary ms-1" href="/jobs/singlejob/<%= jobs[i]._id %>/">View</a>
                                    </div>
                                    <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: 01 Jan, 2045</small>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        <a class="btn btn-primary py-3 px-5" href="">Browse More Jobs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

   

  

</main>

<%- include("./layout/footer") %>